        <EditText
            android:id="@+id/editText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:ems="10"
            android:hint="@string/lbl_password_hint"
            android:inputType="textPassword"
            android:maxLength="10"
            android:padding="10dp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:background="@drawable/whitebutton"
            android:text="@string/lbl_btn_login"
            android:textColor="#FF8080"
            android:textSize="20sp"
            android:textStyle="bold" />
        
         <TextView
            android:id="@+id/forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:text="@string/lbl_pwd"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/chef_registarion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:text="@string/lbl_chef"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/user_registarion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:text="@string/lbl_user"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

